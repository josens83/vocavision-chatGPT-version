# VocaVision Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Database (Supabase PostgreSQL)
# ============================================
# Get this from: Supabase Dashboard > Project Settings > Database > Connection string
# Use "Transaction" pooling mode for serverless environments
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true
DIRECT_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# ============================================
# Backend API
# ============================================
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
PORT=3001
NODE_ENV=production
CORS_ORIGIN=https://your-vercel-app.vercel.app

# ============================================
# OpenAI API (Optional - for AI chat features)
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key

# ============================================
# Stripe Payment (Optional - for subscription features)
# ============================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# Frontend (Vercel Environment Variables)
# ============================================
NEXT_PUBLIC_API_URL=https://your-backend-api.railway.app/api
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# ============================================
# Supabase (Optional - for direct Supabase features)
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://[project-ref].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
